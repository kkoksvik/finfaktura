#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
#
# Adapted for finfaktura by HÃ¥vard Dahle <havard@dahle.no> 2006
# $Id$
#
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

DH_PY_INTERPRETER=/usr/bin/python

#Architecture
build: 
	dh_testdir
	$(DH_PY_INTERPRETER) setup.py build
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp #CONFIGURE-STAMP#
	# Add here commands to clean up after the build process.
	rm -rf build
	find finfaktura/ -name "*.pyc" -exec rm -f {} \;
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k -s
	dh_installdirs -s
	#$(DH_PY_INTERPRETER) setup.py install --prefix=$(CURDIR)/debian/tmp/usr
	scripts/forbered_ressurser.sh 
	$(DH_PY_INTERPRETER) setup.py install --install-layout deb --root $(CURDIR)/debian/tmp
	# Nuke *.pyc files that shouldn't be packaged
	find debian/finfaktura -name "*.pyc" -exec rm {} \;
	dh_install -s --exclude=svn

# Must not depend on anything. This is to be called by
# binary-arch/binary-indep
# in another 'make' thread.
binary-common:
	dh_testdir
	dh_testroot
	dh_installchangelogs ChangeLog
	dh_installchangelogs
	dh_installdocs
	dh_install finfaktura.png usr/share/icons
	dh_desktop faktura.desktop
	dh_install finfaktura.desktop usr/share/applications/kde
	dh_installmenu
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
	dh_pycentral
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: install binary-common
.PHONY: build clean binary-indep binary-arch binary install install-indep install-arch configure
